<div class="profile-background-div">
  <h1>Edit your profile</h1>

  <form action="/private/edit/{{profile._id}}" method="post">
  {{!-- Get username from req.user --}}
    <input type="hidden" name="username" value="{{username}}">

    <label for="">Name:</label>
    <input type="text" name="name" value="{{profile.name}}">

    <input type="hidden" name="favoriteLeague" value="{{profile.favoriteLeague}}">  

      <label for="">Pick your team:</label>
      <select name="favoriteTeam">
        <option selected value="{{profile.favoriteTeam}}">{{profile.favoriteTeam}}</option>
        {{#each teams}}
          <option value="{{this.name}}">{{this.name}}</option>
        {{/each}}   
      </select>

    <label for="">Avatar:</label>
    <input type="text" name="picture" value="{{profile.picture}}">

    <button type="submit">Update</button>
  </form>
</div>