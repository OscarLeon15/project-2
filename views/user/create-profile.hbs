<h1>Here you will create your profile</h1>

<form action="/create-profile" method="post">
{{!-- Get username from req.user --}}
  <input type="hidden" name="username" value="{{username}}">

  <label for="">Name:</label>
  <input type="text" name="name">

  <input type="hidden" name="favoriteLeague" value="{{chosenLeague}}">

  <label for="">Pick your team:</label>
    <select name="favoriteTeam">
    <option hidden disabled selected value> -- Select Team -- </option>
    {{#each team}}
    <option value="{{this.name}}">{{this.name}}</option> 
    {{/each}}   
  </select>

  <label for="">Avatar:</label>
  <input type="text" name="picture">

  <button type="submit">Create</button>
</form>

<p>Back to <a href="/private-page">Homepage</a></p>