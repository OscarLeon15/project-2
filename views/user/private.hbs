<div>
  <div class="profile-background-div">
{{#if user}}
  <h1>Welcome {{user.username}}!</h1>

   
   <h3>Your profiles:</h3>
{{#if profiles}}
  <div class='my-profile'>
  {{#each profiles}}
  <div class="full-card">

    <div class="profile-box">
      <ul>
        <li><a href="/profile/{{this._id}}"><img src="{{this.picture}}" alt="avatar picture" class="avatar-picture"></a></li>
        <li  class="card-name">
          <br>
        <a href="/profile/{{this._id}}"><h4>{{this.name}}</h4></a>
        </li>
        {{!-- <li>Favorite team: {{this.favoriteTeam}} --}}
      </ul>
    </div>
    <div class="profile-box-buttons-div">
      <button class="bttn-sign-in"><a href="/private/edit/{{this._id}}" class="edit-button">Edit profile</a></button>
        <form action="/private/delete/{{this._id}}" method="POST">
          <button>Delete Profile</button>
        </form>
    </div>
  </div>
  {{/each}}
  </div>
{{else}}
  <p>You don't have any profiles yet.</p>
{{/if}}
{{/if}}



  </div>
</div>