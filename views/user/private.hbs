{{#if user}}
  <h1>Welcome, {{user.username}}!</h1>
  <div>
    <a href="/">Homepage</a>
    <a href="/private/create-profile">Create Profile</a>
    <a href="/logout">Logout</a> 
  </div>

  <h2>Your profiles:</h2>

  {{#each profiles}}
  <ul>
    <li>{{this.name}} - Favorite team: {{this.favoriteTeams}} | Avatar: {{this.picture}}</li>
  </ul>
  {{/each}}

{{/if}}