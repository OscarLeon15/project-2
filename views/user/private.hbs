{{#if user}}
  <h1>Hello, {{user.username}}!</h1>

   
   <h3>Your profiles:</h3>
{{#if profiles}}
  {{#each profiles}}
  <div class='my-profile'>
    <h4>{{this.name}}</h4>
    <ul>
      <li>Favorite team: {{this.favoriteTeam}}
      <li>Avatar: {{this.picture}}</li>
    </ul>
    <p><a href="/private/edit/{{this._id}}" class="edit-button">Edit profile</a></p>  
    <form action="/private/delete/{{this._id}}" method="POST">
    <button>Delete Profile</button>
</form>
  </div>
  {{/each}}
{{else}}
  <p>You don't have any profiles yet.</p>
{{/if}}
  <br><br>
  <a href="/private/create-profile">Create Profile</a>
{{/if}}


<div class="profile-background-div">
<div class="nav">
    <a href="/">Homepage</a>    
    <a href="/logout">Logout</a> 
</div>

